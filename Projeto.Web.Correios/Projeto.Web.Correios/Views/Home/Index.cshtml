
@{
    ViewBag.Title = "";
}


<br />
<br />


<section id="inscrever-cep">

    <div class="container">

        <div id="cadastro" class="row col-sm-4 col-md-4">

            @using (Html.BeginForm("Index", "Home", FormMethod.Post))
            {

                <div class="form-group col-sm-12 col-md-12">
                    <label for="cep">Cep para consulta:</label>
                    <input type="text" maxlength="9" onblur="pesquisacep(this.value);" OnKeyPress="formatar('#####-###', this)" class="form-control"
                           id="cep" name="cep" required placeholder="Digite um valor...">
                </div>

                <div class="form-group  col-sm-12 col-md-12">
                    <button type="submit" class="btn btn-success" name="opcao" value="">
                        <span class="glyphicon glyphicon-envelope"></span>
                        Consultar
                    </button>
                </div>
            }
        </div>

    </div>


    <div class="container">

        <div id="cadastro" class="row col-sm-12 col-md-12">

            <div class="form-group col-sm-12 col-md-12">
                Endereço : @TempData["endereco"]
            </div>

            <div class="form-group col-sm-12 col-md-12">
                Bairro:  @TempData["bairro"]
            </div>

            <div class="form-group col-sm-12 col-md-12">
                Cidade:  @TempData["cidade"]
            </div>

            <div class="form-group col-sm-12 col-md-12">
                Cep:  @TempData["cep"]
            </div>

            <div class="form-group col-sm-12 col-md-12">
                Estado: @TempData["estado"]
            </div>


            @if (TempData["erro"] != null)
            {
                <div class="alert alert-info">
                    <button type="button" class="close" data-dismiss="alert">×</button>
                    <strong>Advertência!</strong> O cep não foi localizado
                </div>
            }

        </div>
    </div>





</section>
